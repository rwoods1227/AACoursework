<% cat = @caat%>
<h1>Build a Cat!</h1>
<form>
  <label for="name">Name</label>
  <input id="name" type="text" name="cats[name]" value="<%= cat.name %>">

  <br>

  <label for="birthdate">Birthdate</label>
  <input id="birthdate" type="date" name="cats[birth_date]" value="<%= cat.birth_date %>">

  <br>
  
  <label for="sex">Sex</label><br>
  M
  <input id="sex" type="radio" name="cats[sex]" value= "M"><br>
  F
  <input id="sex" type="radio" name="cats[sex]" value= "F">

  <br>


  <label for="color">Color</label>
  <select id="color" name="cats[name]">
    <option disabled selected>-- Please Select --</option> 
    <option>Brown</option> 
    <option>White</option>
    <option>Black</option>
    <option>Blue</option>
    <option>Rainbow</option>
  </select >
  <br>

  <label for="description">Description</label>
  <textarea name="cats[name]"> 
  <%= cat.description %>
  </textarea>
  <br>
  <input type="submit" value="Add cat to the DB">
</form>
